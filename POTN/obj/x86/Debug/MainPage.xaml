<Page
    x:Class="IC_TPC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IC_TPC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="Auto" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center" RequestedTheme="Light" Background="#FF6B8EB8">


    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="360" Height="640" Background="#FF6B8EB8">
        <ComboBox x:ConnectionId='1' x:Name="comboBox_range" HorizontalAlignment="Left" Margin="207,92,0,0" VerticalAlignment="Top" Width="133" Height="32" Foreground="White"/>
        <TextBlock x:ConnectionId='2' x:Name="textBlock_freq" HorizontalAlignment="Left" Margin="10,92,0,0" TextWrapping="Wrap" Text="Frequency range" VerticalAlignment="Top" Height="32" Width="197" FontSize="21.333" FontFamily="Segoe WP SemiLight" Foreground="White"/>
        <ComboBox x:ConnectionId='3' x:Name="comboBox_band" HorizontalAlignment="Left" Margin="207,144,0,0" VerticalAlignment="Top" Width="133" Height="32" Foreground="White"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock_band" HorizontalAlignment="Left" Margin="10,144,0,0" TextWrapping="Wrap" Text="Channel bandwidth" VerticalAlignment="Top" Height="32" Width="197" FontSize="21.333" FontFamily="Segoe WP SemiLight" Foreground="White"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock_ant_gain" HorizontalAlignment="Left" Margin="10,197,0,0" TextWrapping="Wrap" Text="Antenna gain" VerticalAlignment="Top" Height="32" Width="136" FontSize="21.333" FontFamily="Segoe WP SemiLight" RenderTransformOrigin="-1.338,6.281" Foreground="White"/>
        <TextBox x:ConnectionId='6' x:Name="textBox_gain" HorizontalAlignment="Left" Margin="207,197,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Segoe WP SemiLight" FontSize="16" Height="33" Width="133" Foreground="White"/>
        <Button x:ConnectionId='7' x:Name="button" Content="Calculate" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" Width="330"                      Foreground="White"/>
        <TextBox x:ConnectionId='8' x:Name="outputBox" HorizontalAlignment="Left" Margin="10,287,0,0" TextWrapping="Wrap" Text=" choose your options and press 'Calculate' button" VerticalAlignment="Top" Height="149" Width="330" FontFamily="Segoe WP SemiLight" FontSize="13" Foreground="White"/>
        <TextBlock x:ConnectionId='9' x:Name="title" HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="IC Transmitter power control" VerticalAlignment="Top" FontFamily="Segoe WP SemiLight" FontSize="26.667" Foreground="White"/>
    </Grid>
</Page>

